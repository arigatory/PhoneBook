@model PhoneBook.Models.Contact
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Редактор контакта</title>
</head>
<body>
    <form asp-action="ContactForm" method="post">
        <div>
            <label asp-for="FirstName">
                Имя:
            </label>
            <input asp-for="FirstName" />
        </div>
        <div>
            <label asp-for="MiddleName">
                Отчество:
            </label>
            <input asp-for="MiddleName" />
        </div>
        <div>
            <label asp-for="LastName">
                Фамилия:
            </label>
            <input asp-for="LastName" />
        </div>
        <div>
            <label asp-for="Phone">
                Телефон:
            </label>
            <input asp-for="Phone" />
        </div>
        <div>
            <label asp-for="Address">
                Адрес:
            </label>
            <input asp-for="Address" />
        </div>
        <div>
            <label asp-for="Description">
                Описание:
            </label>
            <input asp-for="Description" />
        </div>

        <button type="submit">Сохранить</button>
    </form>
</body>
</html>