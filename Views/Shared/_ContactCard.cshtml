@model Contact

<div class="card">
    <div class="card-body">
        <h5 class="card-title h3">@Model.LastName @Model.FirstName @Model.MiddleName</h5>
        <p class="card-text h4">@Model.Phone</p>
        <div class="card-text"><strong>@Model.Address</strong></div>
        <p class="card-text">@Model.Description</p>
        <a asp-controller="Contact" asp-action="ContactForm" asp-route-id="@Model.Id" class="btn btn-primary">Редактировать</a>
        <span>
        <form asp-action="ContactDeleted" method="post" style="display: inline-block" class="float-right">
            <input type="hidden" asp-for="Id" />
            <button class="btn btn-danger">Удалить</button>
        </form>
        </span>
    </div>
</div>